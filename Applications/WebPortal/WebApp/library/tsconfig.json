{
  "compilerOptions": {
    "declaration": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "module": "commonjs",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "outDir": "./library",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es2017"
  },
  "include": [
    "./source/*.ts",
    "./source/*.tsx"
  ]
}
